<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dn.photoapp.Windows.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <GridView
            android:id="@+id/gridView"
            android:layout_width="fill_parent"
            android:layout_height="133dp"
            android:layout_weight=".93"
            android:layout_margin="5dp"
            android:columnWidth="100dp"
            android:drawSelectorOnTop="true"
            android:gravity="center"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp"
            android:focusable="true"
            android:clickable="true"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:text="Add Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addPhotoAction"
                android:onClick="addPhotoAction"/>

            <Button
                android:text="Delete Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/deletePhotoAction"
                android:onClick="deletePhotoAction"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:text="View Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewPhotoAction"
                android:onClick="viewPhotoAction"
                />

            <Button
                android:text="Recaption Photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recaptionPhotoAction"
                android:onClick="recaptionPhotoAction"/>
            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:text="Move Photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/movePhotoAction"
                    android:onClick="movePhotoAction"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
